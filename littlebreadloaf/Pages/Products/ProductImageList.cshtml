@page
@model ProductImageListModel
@{
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Products/ProductList">Products</a></li>
        <li class="breadcrumb-item"><a asp-page="/Products/ProductView" asp-route-ProductID="@Model.Product.ProductID">@Model.Product.Name</a></li>
        <li class="breadcrumb-item active" aria-current="page">Image List</li>
    </ol>
</nav>

<a class="btn btn-outline-secondary" asp-page="/Products/ProductImageAdd" asp-route-ProductID="@Model.Product.ProductID"><i class="fa fa-plus"></i> Upload New Image</a>
<div class="mb-3"></div>

@if (Model.ProductImages.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Image</th>
                <th>Primary Image</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var image in Model.ProductImages)
            {
                <tr>
                    <td>@image.Title</td>
                    <td>
                        <a href="@image.FileLocation.Replace("{1}","500")" data-toggle="lightbox" data-title="@image.Title">
                            <img src="@image.FileLocation.Replace("{1}","100")" class="img-thumbnail" alt="@image.Title" title="@image.Title" />
                        </a>
                    </td>
                    <td>
                        @if (image.PrimaryImage.HasValue && image.PrimaryImage.Value)
                        {
                            <i class="fa fa-star" aria-hidden="true"></i>
                        }
                    </td>
                    <td>
                        <a class="btn btn-outline-secondary" asp-page="/Products/ProductImageEdit" asp-route-ProductImageID="@image.ProductImageID" asp-route-ProductID="@Model.Product.ProductID"><i class="fa fa-pencil fa-fw"></i> Edit Image</a>
                    </td>
                    <td>
                        <form class="input-group" asp-page-handler="primary" asp-route-ProductImageID="@image.ProductImageID" asp-route-ProductID="@Model.Product.ProductID" method="post">
                            <button type="submit" class="btn btn-outline-secondary">
                                <i class="fa fa-star" aria-hidden="true"></i> Set Primary
                            </button>
                        </form>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-page="/Products/ProductImageDelete" asp-route-ProductImageID="@image.ProductImageID" asp-route-ProductID="@Model.Product.ProductID"><i class="fa fa-trash" aria-hidden="true"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    //No Images
    <div class="alert alert-info" role="alert">
        @Model.Product.Name has no images.
    </div>
}
