@page
@model ProductEditModel
@{
    ViewData["Title"] = "Edit Product";
    ViewData["ReturnURL"] = Url.Page("/Products/ProductEdit", new { productID = Model.Product.ProductID });
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Products/ProductList">Products</a></li>
        <li class="breadcrumb-item"><a asp-page="/Products/ProductView" asp-route-ProductID="@Model.Product.ProductID">@Model.Product.Name</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
</nav>

@using (Html.BeginForm("ProductEdit", "ProductEdit", FormMethod.Post, new { @class = "form-group-sm" }))
{
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Product.Name)
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-pencil fa-fw" aria-hidden="true" title="Name"></i></div>
                </div>
                @Html.TextBoxFor(m => m.Product.Name, new { @class = "form-control", autocomplete = "off", autofocus = "autofocus" })
            </div>
            @Html.ValidationMessageFor(m => m.Product.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Product.Price)
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-usd fa-fw" aria-hidden="true" title="Price"></i></div>
                </div>
                @Html.TextBoxFor(m => m.Product.Price, new { @class = "form-control", autocomplete = "off", autofocus = "autofocus" })
            </div>
            @Html.ValidationMessageFor(m => m.Product.Price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Product.Unit)
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-balance-scale fa-fw" aria-hidden="true" title="Unit"></i></div>
                </div>
                @Html.TextBoxFor(m => m.Product.Unit, new { @class = "form-control", autocomplete = "off", autofocus = "autofocus" })
            </div>
            @Html.ValidationMessageFor(m => m.Product.Unit, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Product.Description)
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-newspaper-o fa-fw" aria-hidden="true" title="Description"></i></div>
                </div>
                @Html.TextAreaFor(m => m.Product.Description, new { @class = "form-control", autocomplete = "off", autofocus = "autofocus" })
            </div>
            @Html.ValidationMessageFor(m => m.Product.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Product.SortOrder)
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-sort-numeric-desc fa-fw"></i></div>
                </div>
                @Html.TextBoxFor(m => m.Product.SortOrder, new { @class = "form-control", autocomplete = "off", autofocus = "autofocus" })
            </div>
            @Html.ValidationMessageFor(m => m.Product.SortOrder, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="form-control">
                <div class="form-check">
                    @Html.CheckBoxFor(f => f.Product.ShowOnFrontPage, new { @class = "form-check-input", autocomplete = "off", autofocus = "autofocus", @placeholder = "Show on front page" })
                    @Html.LabelFor(f => f.Product.ShowOnFrontPage, "Show on front page", new { @class = "form-check-label" })
                </div>
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="form-control">
                <div class="form-check">
                    @Html.CheckBoxFor(f => f.Product.PreOrder, new { @class = "form-check-input", autocomplete = "off", autofocus = "autofocus", @placeholder = "Show on front page" })
                    @Html.LabelFor(f => f.Product.PreOrder, "Can be pre-ordered", new { @class = "form-check-label" })
                </div>
            </div>
        </div>
    </div>

    @Html.HiddenFor(m => m.Product.ProductID)
    @Html.HiddenFor(m => m.Product.Created)
    @Html.HiddenFor(m => m.Product.LastUpdated)

    <div class="my-3">
        <button type="submit" class="btn btn-success"><i class="fa fa-floppy-o" aria-hidden="true" title="Save"></i> Save</button>
        <a class="btn btn-danger" asp-page="/Products/ProductView" asp-route-ProductID="@Model.Product.ProductID"><i class="fa fa-times" aria-hidden="true" title="Cancel"></i> Cancel</a>
    </div>
}