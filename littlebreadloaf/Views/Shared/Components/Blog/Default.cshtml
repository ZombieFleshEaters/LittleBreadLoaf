@model littlebreadloaf.ViewComponents.ViewBlog

@if (Model.HasImage)
{
    <img class="img-fluid" src="@Model.BlogImage.FileLocation.Replace("{1}","1110")" />
}

<div>
    <div class="my-2">
        @await Component.InvokeAsync("User", new{
                                            userID = Model.Blog.UserID.ToString(),
                                            showInstagram = true,
                                            showLastName = true
                                        })
    </div>
    <h3 class="mt-2">@Model.Blog.Title</h3>

    <h6 class="text-muted"><i class="fa fa-calendar" aria-hidden="true" title="Created"></i> @Html.DisplayFor(c => c.Blog.Created)</h6>

    <p>@Html.Raw(@Model.Blog.Content)</p>
    <br />

</div>

