@page
@model ProductDeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Products/ProductList">Products</a></li>
        <li class="breadcrumb-item"><a asp-page="/Products/ProductView" asp-route-ProductID="@Model.Product.ProductID">@Model.Product.Name</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete</li>
    </ol>
</nav>

@using (Html.BeginForm("Delete", "ProductDelete", FormMethod.Post, new { @class = "form-group-sm" }))
{
    <div class="alert alert-danger" role="alert">
        Are you sure you want to delete this product?
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Product.Name)
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-pencil fa-fw" aria-hidden="true" title="Name"></i></div>
                </div>
                @Html.TextBoxFor(m => m.Product.Name, new { @class = "form-control", autocomplete = "off", autofocus = "autofocus", disabled = "on" })
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Product.Description)
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-newspaper-o fa-fw" aria-hidden="true" title="Description"></i></div>
                </div>
                @Html.TextAreaFor(m => m.Product.Description, new { @class = "form-control", autocomplete = "off", autofocus = "autofocus", disabled = "on" })
                @Html.HiddenFor(m => m.Product.ProductID)
            </div>
        </div>
    </div>
    <div>
        <button type="submit" class="btn btn-success"><i class="fa fa-trash" aria-hidden="true" title="Delete"></i> Yes, please delete</button>
        <a class="btn btn-danger" asp-page="/Products/ProductView" asp-route-ProductID="@Model.Product.ProductID"><i class="fa fa-times" aria-hidden="true" title="Cancel"></i> Cancel</a>
    </div>
}