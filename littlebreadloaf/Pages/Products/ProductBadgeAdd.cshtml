@page
@model ProductBadgeAddModel
@{
    ViewData["Title"] = "Add Badge";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Products/ProductList">Products</a></li>
        <li class="breadcrumb-item"><a asp-page="/Products/ProductView" asp-route-ProductID="@Model.ProductID">@Model.ProductName</a></li>
        <li class="breadcrumb-item"><a asp-page="/Products/ProductBadgeList" asp-route-ProductID="@Model.ProductID">Badge List</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add Badge</li>
    </ol>
</nav>

@using (Html.BeginForm("ProductBadgeAdd", "ProductBadgeAdd", FormMethod.Post, new { @class = "form-group-sm" }))
{
    <div class="form-group row">
        @Html.LabelFor(m => m.ProductBadge.Title, new { @class = "col-2 col-form-label" })

        <div class="col-5">
            @Html.TextBoxFor(m => m.ProductBadge.Title, new { @class = "form-control", autocomplete = "off", autofocus = "autofocus" })
            @Html.ValidationMessageFor(m => m.ProductBadge.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.ProductBadge.Description, new { @class = "col-2 col-form-label" })
        <div class="col-5">
            @Html.TextBoxFor(m => m.ProductBadge.Description, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(m => m.ProductBadge.Description, "", new { @class = "text-danger" })
        </div>
    </div>
    <button type="submit" class="btn btn-success" asp-route-ProductID="@Model.ProductID"><i class="fa fa-floppy-o" aria-hidden="true" title="Save"></i> Save</button>
    <a class="btn btn-danger" asp-page="/Products/ProductBadgeList" asp-route-ProductID="@Model.ProductID"><i class="fa fa-times" aria-hidden="true" title="Cancel"></i> Cancel</a>
}