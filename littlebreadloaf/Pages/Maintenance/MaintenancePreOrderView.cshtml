@page
@model littlebreadloaf.Pages.Maintenance.MaintenancePreOrderViewModel
@{
    ViewData["Title"] = "View Pre-order";
    ViewData["ReturnURL"] = Url.Page("/Maintenance/MaintenancePreOrderView");
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Maintenance/MaintenanceList">Maintenance</a></li>
        <li class="breadcrumb-item"><a asp-page="/Maintenance/MaintenancePreOrderList">Pre-orders</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
    </ol>
</nav>

<form method="post">
    <div class="form-row">
        <div class="form-group col-6">
            @Html.LabelFor(m => m.PreOrderSource.Source)
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-handshake-o" aria-hidden="true" title="Pre-order source"></i></div>
                </div>
                @Html.TextBoxFor(m => m.PreOrderSource.Source, new { @class = "form-control", autocomplete = "off", autofocus = "autofocus", @tabindex = "100", @disabled = "on" })
            </div>
            @Html.ValidationMessageFor(m => m.PreOrderSource.Source, "", new { @class = "text-danger" })
            @Html.ValidationMessage("Duplicate", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-6">
            @Html.Label("Address")
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-map-marker fa-fw" aria-hidden="true" title="Minimum delivery order amount"></i></div>
                </div>
                @Html.TextBoxFor(m => m.Full_Address, new { @class = "form-control", autocomplete = "off", autofocus = "autofocus", @id = "delivery_address", @placeholder = "Enter the address to deliver", @tabindex = "101", @disabled = "on" })
            </div>
            @Html.ValidationMessageFor(m => m.Full_Address, "", new { @class = "text-danger" })
            @Html.ValidationMessage("AddressRequired", new { @class = "text-danger" })

        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-6">
            <div class="input-group">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Sun</th>
                            <th>Mon</th>
                            <th>Tues</th>
                            <th>Wed</th>
                            <th>Thu</th>
                            <th>Fri</th>
                            <th>Sat</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.CheckBoxFor(s => s.PreOrderSource.Sunday, new { @tabindex = "102", @disabled = "on" })</td>
                            <td>@Html.CheckBoxFor(s => s.PreOrderSource.Monday, new { @tabindex = "103", @disabled = "on" })</td>
                            <td>@Html.CheckBoxFor(s => s.PreOrderSource.Tuesday, new { @tabindex = "104", @disabled = "on" })</td>
                            <td>@Html.CheckBoxFor(s => s.PreOrderSource.Wednesday, new { @tabindex = "105", @disabled = "on" })</td>
                            <td>@Html.CheckBoxFor(s => s.PreOrderSource.Thursday, new { @tabindex = "106", @disabled = "on" })</td>
                            <td>@Html.CheckBoxFor(s => s.PreOrderSource.Friday, new { @tabindex = "107", @disabled = "on" })</td>
                            <td>@Html.CheckBoxFor(s => s.PreOrderSource.Saturday, new { @tabindex = "108", @disabled = "on" })</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            @Html.ValidationMessageFor(m => m.Full_Address, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-6">
            @Html.Label("Link to give to the client")
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-external-link" aria-hidden="true" title="Link to give to the client"></i></div>
                </div>
                @Html.TextBoxFor(m => m.FullUrl, new { @class = "form-control", autocomplete = "off", autofocus = "autofocus", @placeholder = "Link to give to the client", @tabindex = "101", @disabled = "on" })
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="form-control">
                <div class="form-check">
                    @Html.CheckBoxFor(f => f.PreOrderSource.Active, new { @class = "form-check-input", autocomplete = "off", autofocus = "autofocus", @placeholder = "Pre-order is valid", disabled = "on" })
                    @Html.LabelFor(f => f.PreOrderSource.Active, "Pre-order is valid", new { @class = "form-check-label" })
                </div>
            </div>
        </div>
    </div>

    @Html.HiddenFor(h => h.PreOrderSource.PreOrderID)
    @Html.HiddenFor(h => h.PreOrderSource.Created)
    @Html.HiddenFor(h => h.PreOrderSource.AddressID, new { @id = "address_id" })

    <div class="my-3">
        <a class="btn btn-outline-secondary" asp-page="/Maintenance/MaintenancePreOrderEdit" asp-route-Source="@Model.PreOrderSource.Source"><i class="fa fa-pencil fa-fw" aria-hidden="true" title="Edit"></i> Edit</a>
        <a class="btn btn-danger" asp-page="/Maintenance/MaintenancePreOrderList"><i class="fa fa-times" aria-hidden="true" title="Cancel"></i> Cancel</a>
    </div>
</form>
